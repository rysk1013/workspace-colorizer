{
  "name": "workspace-colorizer",
  "displayName": "Workspace Colorizer",
  "publisher": "yourname",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "workspaceColorizer.reset",
        "title": "Workspace Colorizer: Reset Colors"
      }
    ],
    "configuration": {
      "title": "Workspace Colorizer",
      "properties": {
        "workspaceColorizer.folderColors": {
          "type": "object",
          "default": {
            "sample1": "#1E90FF",
            "sample2": "#32CD32",
            "sample3": "#FFD700"
          },
          "markdownDescription": "ワークスペース内フォルダ名（または正規表現）→ タイトルバー色（#RRGGBB）。最初にマッチしたエントリが使われます。"
        },
        "workspaceColorizer.statusBarSync": {
          "type": "boolean",
          "default": true,
          "description": "タイトルバーと同じ色を Status Bar にも適用する"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "typescript": "^5.6.3",
    "@vscode/test-electron": "^2.4.1"
  }
}
